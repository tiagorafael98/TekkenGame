@model IEnumerable<TekkenGame.Models.Jogos>

@{
    ViewBag.Title = "Jogos";
}

<h2>Jogos</h2>

<p>
    @if (User.IsInRole("Admin")) {
        @Html.ActionLink("Adicionar novo jogo", "Create")
     }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fotografia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Logotipo)*@

            <a href="~/Jogos/Details/@item.ID">
                <img src="~/ImagemCapas/@item.Fotografia" width="150" height="180" />
            </a>
        </td>
        <td>
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Editar", "Edit", new { id = item.ID })
                <span>|</span>
                @Html.ActionLink("Apagar jogo", "Delete", new { id = item.ID })
            }
        </td>
    </tr>
}

</table>
